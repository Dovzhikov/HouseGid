<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <CheckBox android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/cdEnable"
              android:text="Включить/выключить Wi-Fi"/>
    <TextView android:layout_width="fill_parent"
              android:text="point"
              android:textSize="24pt"
              android:id="@+id/textView"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="fill_parent"
            android:text="Список point"
            android:onClick="openActivity"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Название point"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить данные point"
            android:onClick="writePoint"/>
    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello World, MyActivity"
                    android:id="@+id/text"
                    />
        </ScrollView>
    </HorizontalScrollView>

</LinearLayout>

